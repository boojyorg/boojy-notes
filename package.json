{
  "name": "boojy-notes",
  "private": true,
  "version": "0.1.0",
  "description": "Boojy Notes",
  "author": "Tyr Bujac",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:web": "ELECTRON_DISABLE=1 vite",
    "build": "vite build",
    "build:electron": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "chokidar": "^5.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.5.2",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "org.boojy.notes",
    "productName": "Boojy Notes",
    "copyright": "Copyright 2026 Tyr Bujac",
    "files": ["dist/**/*", "dist-electron/**/*", "assets/**/*"],
    "win": { "target": ["nsis"], "icon": "assets/icon.png" },
    "mac": { "target": ["dmg"], "icon": "assets/icon.png", "category": "public.app-category.productivity" },
    "linux": { "target": ["AppImage"], "icon": "assets/icon.png" }
  }
}
